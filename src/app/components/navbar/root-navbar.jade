h2.root-navbar(ng-hide='vm.hide' ng-class='{disabled: vm.hideNavs}')

  a.home(href ui-sref='home' ng-class='{disabled: vm.isRootState}')
    b.glyphicon.glyphicon-home

  a(href ng-click='vm.rootClick()' ng-class='{disabled: vm.isRootState}')
    | {{ vm.title }}

  .separator

  fullscreen-menu(ng-show='vm.isRootState')

  .settings-nav(ng-if='vm.isSalesState')

    .settings-block(
    ng-if='vm.isCatalogueState'
    popover-animation='true'
    uib-popover-template="'app/components/navbar/cog.html'"
    popover-trigger='outsideClick'
    popover-placement='bottom-right'
    )
      i.glyphicon.glyphicon-cog

    .dropdown-salesman-menu
      salesmans-menu
hr
