.fullscreen-service()

  .header
    .title {{ title }}
    .window-controls

      .buttons
        button.btn(
          ng-repeat="btn in buttons track by btn.icon"
          ng-click="btn.onClick(btn)"
          ng-class="btn.cls"
        )
          i(ng-class="btn.icon")

      a(
        href
        ng-click='closeClick()'
      )
        i.glyphicon.glyphicon-remove.btn-lg

