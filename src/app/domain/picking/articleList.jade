h2.clearfix Товары для сборки
  .lead

section
  ul.list-group(as-sortable ng-model='vm.articles')
    li.list-group-item.display-flex(ng-repeat='item in vm.articles track by item.id' as-sortable-item)
      .sorter-handle.gray(as-sortable-item-handle) {{ $index + 1 }}
      .flex-1
        h5.list-group-item-heading {{item.article.name}}
        small.list-group-item-text
          span Фасовка:
          label {{item.article.packageRel}}
          = ' '
          span Объем:
          label {{item.article.pieceVolume | number}}
      .flex-right
        p
          label {{item.volume.full}}
        p
          span.gray(ng-repeat='order in vm.orders track by order.id')
            span(ng-if='$index')
              = ' + '
            label {{item.orderVolume(order) | number:0}}
