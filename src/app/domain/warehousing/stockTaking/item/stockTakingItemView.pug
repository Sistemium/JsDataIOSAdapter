.stock-taking-item-view(ng-class="{unsaved: vm.stockTakingItem.DSHasChanges()}")

  .fields

    .field.timestamp
      label Время
      strong {{ vm.stockTakingItem.timestamp | dateTime:{seconds: true} }}

    .field.barcode
      label Штрих-код
      strong
        confirmed-button(on-confirm="vm.itemDeleteClick()")
          i.glyphicon.glyphicon-trash
          cancel
            i.glyphicon.glyphicon-lock
        span {{ vm.stockTakingItem.barcode }}

    .field.name
      label Товар
      strong
        | {{ vm.stockTakingItem.name }}

    .field.volume(
    ng-class="{touched: vm.volumeViewTouched}"
    )
      label Количество
      strong.animate(sa-animate-on-change="vm.stockTakingItem.volume" change-class="change-up")
        | {{ vm.volumeView }}

  sa-keyboard(
  datatype='boxPcs'
  touched='vm.volumeViewTouched'
  model='vm.volumeView'
  export-model='vm.stockTakingItem.volume'
  box-rel='vm.stockTakingItem.packageRel'
  )
