.stock-taking-item-list.list-group.scroll-y(
vs-repeat
resize resize-offset-top="10"
)

  .list-group-item(
  id='id-{{::item.id}}'
  ng-repeat='item in vm.stockTakingItems track by item.id'
  ng-class='{active: vm.activeId === item.id}'
  )

    .title
      a.name(href ng-click="vm.itemClick(item)")
        .pre-name {{ ::item.article.preName }}
        .middle
          .first-name {{ ::item.article.firstName }}
          .piece-volume {{ item.article.pieceVolume }}
          .tags
            .tag(
            ng-repeat='tag in ::item.article.tags track by tag.code'
            ng-class='::tag.code'
            ) {{ ::tag.label }}
        .footer
          .last-name {{ ::item.article.lastName }}
      .barcode
        span {{ ::item.barcode }}
        span {{ item.timestamp | dateTime:{seconds: true, date: false} }}
        span(ng-if='item.packageRel') (фасовка {{ item.packageRel }})

    .volume
      strong.animate(
      sa-animate-on-change="item.volume" change-class="change-up"
      ) {{ item.volume | boxesBottles:{boxRel: item.packageRel} }}
