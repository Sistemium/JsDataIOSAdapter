    .count {{ vm.items.length | number }}

  .status

    .processing {{ vm.warehouseBox.statusLabel() }}

    .picking-order(ng-if="vm.pickingOrder")
      .ndoc {{ vm.pickingOrder.ndoc }}
      .date {{ vm.pickingOrder.date | amUtc | amLocal | amDateFormat: 'DD.MM.YY' }}

  .items
