.news-feed.ui-view()

  .buttons

    button.btn.btn-primary(
    ng-disabled='!vm.isNewsMaker'
    ng-click='vm.createNewsMessageClick()'
    ) Добавить новость

  .scroll-y(resize resize-offset-top='15' vs-repeat='155')

    .news-message(
    ng-repeat='newsMessage in vm.newsMessages track by newsMessage.id'
    ng-click='vm.newsMessageClick(newsMessage)'
    )

      .header
        label.subject {{newsMessage.subject}}
        valid-lifetime(date-b='newsMessage.dateB' date-e='newsMessage.dateE')

      .body
        p {{newsMessage.body}}

      .rating
        label Оценка:
        span(
        uib-rating
        enable-reset='false'
        titles='["Один", "Два", "Три", "Четыре", "Пять"]'
        ng-model='vm.ratings[newsMessage.id]'
        max='5'
        ng-click='$event.preventDefault();vm.newsRatingClick(newsMessage)'
        )
