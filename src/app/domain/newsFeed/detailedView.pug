.detailed-view
  .news-item
    .line-1
      label.subject {{vm.news.subject}}
      valid-lifetime(date-b='vm.news.dateB' date-e='vm.news.dateE' ng-if='vm.news.dateE || vm.news.dateB')
    .line-2
      .news-body.scroll-y(resize resize-offset-top='60')
        p {{vm.news.body}}
    .line-3

      // TODO: Show if user has admin/editor? rights
      .buttons
        button.btn-warning.btn.glyphicon.glyphicon-pencil(ng-click='vm.editNews()')
        button.btn-warning.btn.glyphicon.glyphicon-camera(ng-click='vm.addPhoto()')

      .rating
        label Оценка:
        span(
        uib-rating
        ng-model='vm.news.userNewsMessage.rating'
        max='5'
        ng-click='vm.saveRating($event, vm.news.userNewsMessage.rating, vm.news.id)'
        titles='["Один", "Два", "Три", "Четыре", "Пять"]'
        enable-reset='false'
        aria-labelledby='default-rating'
        )
