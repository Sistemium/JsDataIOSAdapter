.quantity-edit.text-center.display-flex

  .boxes.flex-1

    a.btn.btn-link.btn-block(ng-click='vm.incrementBoxes()' angular-ripple) +К
      //i.glyphicon.glyphicon-chevron-up

    input.form-control.text-center(
    ng-attr-type='{{vm.type}}'
    select-on-focus
    placeholder='К'
    ng-model='vm.boxes'
    ng-model-options='{debounce: 300}'
    maxlength='3'
    )

    a.btn.btn-link.btn-block(ng-click='vm.decrementBoxes()' angular-ripple) -К
      //i.glyphicon.glyphicon-chevron-down

  .bottles.flex-1

    a.btn.btn-link.btn-block(ng-click='vm.incrementBottles()' angular-ripple) +Б

    input.form-control.text-center(
    ng-attr-type='{{vm.type}}'
    select-on-focus
    placeholder='Б'
    ng-model='vm.bottles'
    ng-model-options='{debounce: 300}'
    maxlength='3'
    )

    a.btn.btn-link.btn-block(ng-click='vm.decrementBottles()' angular-ripple) -Б
