.quantity-edit

  .inputs

    .boxes

      a.btn.btn-link(ng-click='vm.incrementBoxes()' angular-ripple) +К

      input.form-control.text-center(
      ng-attr-type='{{vm.type}}'
      select-on-focus
      placeholder='К'
      ng-model='vm.boxes'
      ng-model-options='{debounce: 300}'
      maxlength='3'
      )

      a.btn.btn-link(ng-click='vm.decrementBoxes()' angular-ripple) -К

    .bottles

      a.btn.btn-link(ng-click='vm.incrementBottles()' angular-ripple) +Б

      input.form-control.text-center(
      ng-attr-type='{{vm.type}}'
      select-on-focus
      placeholder='Б'
      ng-model='vm.bottles'
      ng-model-options='{debounce: 300}'
      maxlength='3'
      )

      a.btn.btn-link(ng-click='vm.decrementBottles()' angular-ripple) -Б

  a.btn.btn-link(ng-click='vm.deleteClick()') Удалить
