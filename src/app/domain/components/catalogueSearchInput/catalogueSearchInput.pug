.stm-searcher.form-group.has-feedback(ng-class='{"has-search": vm.search}')

  label(ng-click='vm.searchClick($event)')
    i.glyphicon.glyphicon-search

  input#search-input.form-control(
  type='search'
  placeholder='Поиск'
  select-on-focus
  track-focused
  aria-describedby='search-input'
  ng-model='vm.search'
  on-enter='vm.onSearchEnter()'
  )

  span.form-control-feedback(ng-hide='!vm.search')
    a(ng-click='vm.clearSearchClick()' href)
      i.glyphicon.glyphicon-remove

  .filters
    a.filter(
    href
    ng-click='vm.removeTagClick(filter)'
    ng-repeat='filter in vm.filters track by $index'
    )
      i.glyphicon.glyphicon-remove
      span {{ filter.label }}
