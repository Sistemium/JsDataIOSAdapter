.copy-selected()

  button.btn.btn-warning(
  ng-if='vm.inProgress'
  ng-click='vm.cancelClick($event)'
  ) Отмена

  button.btn(
  ng-click='vm.triggerClick()'
  ng-disabled='vm.inProgress && !vm.isReady()'
  ng-class='vm.isReady() && "btn-success" || vm.inProgress && "btn-warning" || "btn-link"'
  )
    i.glyphicon.glyphicon-share(ng-if='!vm.inProgress')
    span(ng-if='vm.inProgress && !vm.isReady()') Выберите долги
    span(ng-if='vm.inProgress && vm.isReady()')
      span Cкопировать
      currency-value(value='vm.total')
