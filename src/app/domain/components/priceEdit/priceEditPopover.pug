fieldset.price-edit-popover

  .inputs

    .discount


      .form-group
        label % cкидки:

        .input-group

          a.btn.input-group-addon(ng-click='vm.decrementPercentClick()')
            i.glyphicon.glyphicon-minus

          input.form-control#price-edit-discount(
          track-focused
          type='number'
          min='0'
          max='30'
          step='0.01'
          ng-model='vm.discountPercent'
          ng-model-options='{debounce: 1000}'
          ng-readonly='!vm.editable'
          )

          a.btn.input-group-addon(ng-click='vm.incrementPercentClick()')
            i.glyphicon.glyphicon-plus

    .list-group.discount-scope

      a.list-group-item(
      href
      ng-model='vm.discountScope'
      uib-btn-radio="'article'" uib-uncheckable='false'
      ) На товар

      a.list-group-item(
      href
      ng-model='vm.discountScope'
      uib-btn-radio="'priceGroup'" uib-uncheckable='false'
      )
        .name На категорию
        .gray {{ vm.priceGroup.name }}

      a.list-group-item(
      href
      ng-model='vm.discountScope'
      uib-btn-radio="'saleOrder'" uib-uncheckable='false'
      ) На весь заказ

    .price

      .form-group
        label Со скидкой:
        span.form-control#price-edit-price {{ vm.price | number:2 }}

    .priceOrigin

      .form-group
        label Без скидки:
        = ' '
        span.form-control#price-edit-priceOrigin {{ vm.priceOrigin | number:2 }}

  //.extras(ng-if='vm.ksOption')

    button.btn(
    ng-class='vm.position.isCompDiscount ? "btn-primary" : "btn-default"'
    ng-click='vm.ksButtonClick()'
    ) КС
