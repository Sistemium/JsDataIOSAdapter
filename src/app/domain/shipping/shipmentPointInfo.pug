section.ui-view(cg-busy='vm.cgBusy')

  make-photo(
  model='vm.shipmentRoutePointPhoto'
  model-name='ShipmentRoutePointPhoto'
  )
    i.glyphicon.glyphicon-camera
    span Добавить фото

  #scroll-main.scroll-y(
  resize
  resize-offset-top='10'
  resize-property='max-height'
  ng-if='vm.data.length'
  )

    .shipmentRoutePointPhotos
      .shipmentRoutePointPhoto(ng-repeat='item in vm.data track by item.id')

        a.thumb(
        href
        ng-click='vm.thumbClick(item)'
        ) {{ item.deviceCts | amUtc | amLocal | amCalendar }}
          img(ng-src='{{ item.srcThumbnail }}')

        hr
