h3 {{ vm.outlet.partner.name }}
  = ' '
  small.gray ({{ vm.outlet.address }})

section.ui-view
  .buttons.pull-right
    button.btn.btn-success(ng-click='vm.newVisitClick()') Новый визит

  table.table.table-striped.clear-both(ng-if='vm.visits.length')
    thead
      tr
        th(colspan='2')
          h4 Недавние визиты
      tr
        th Дата
        th.number Кол-во ответов
    tbody
      tr.clickable(ng-repeat='visit in vm.visits | orderBy:"-deviceCts" track by visit.id' ng-click='vm.visitClick(visit)')
        td {{ visit.deviceCts | amUtc | amLocal | amCalendar }}
        td.number {{ visit.answers.length | number: 0}}
