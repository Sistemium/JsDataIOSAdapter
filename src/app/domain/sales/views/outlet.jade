h4 {{ vm.outlet.partner.name }}
  = ' '
  span.gray ({{ vm.outlet.address }})

section.ui-view
  .buttons.pull-right
    button.btn.btn-success(ng-click='vm.newVisitClick()') Новый визит

  table.table.table-striped.clear-both(ng-if='vm.visits.length')
    thead
      tr
        th(colspan='2')
          h4 Прошлые визиты
      tr
        th Дата
        th.number Кол-во ответов
    tbody
      tr.clickable(ng-repeat='visit in vm.visits track by visit.id' ng-click='vm.visitClick(visit)')
        td {{ visit.date | amDateFormat:'DD/MM/YYYY (dddd)' }}
        td.number {{ visit.answers.length | number: 0}}
