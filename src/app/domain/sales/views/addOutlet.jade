section.row-fluid(cg-busy='{promise: vm.busy, message: vm.busyMessage}')
  form.form-horizontal(name="addOutletForm")

    .form-group()
      label.col-sm-4.control-label(for="inputName") Название партнёра
      .col-sm-8
        input#inputName.form-control(
        type='text'
        name='name'
        ng-required='!vm.selectedPartner'
        placeholder='Название партнёра'
        ng-model='vm.name'
        ng-focus='vm.inputNameFocus()'
        ng-blur='vm.inputNameBlur()'
        autocomplete='off'
        uib-typeahead='partner as partner.name for partner in vm.getPartners($viewValue, {sortBy: "shortName"})'
        typeahead-min-length=0
        typeahead-on-select='vm.selectPartner($item)'
        )

    .form-group
      label.col-sm-4.control-label(for="inputAddress") Адрес
      .col-sm-8
        input#inputAddress.form-control(
        type="text"
        name="address"
        ng-required='true'
        placeholder="Адрес"
        ng-model="vm.address"
        ng-focus='vm.inputFocus()'
        ng-blur='vm.inputBlur()'
        autocomplete="off"
        )
    hr

    .form-group
      .col-sm-4.col-sm-offset-8
        uib-accordion(close-others='true')

          uib-accordion-group(
          ng-repeat='button in vm.buttons'
          class='panel-{{ button.type }}'
          is-disabled="(button.type === 'primary') && addOutletForm.$invalid"
          ng-click='vm.accButtonClick(addOutletForm, button)'
          is-open='button.isOpen'
          )
            uib-accordion-heading
              div(ng-click='toggleOpen()')
                span {{ button.title }}
                i.pull-right.glyphicon(
                ng-hide="(button.type === 'primary') && addOutletForm.$invalid"
                ng-class="button.isOpen && 'glyphicon-chevron-up' || !addOutletForm.$pristine && 'glyphicon-chevron-down' || 'glyphicon-chevron-left'"
                )
            p {{ button.description }}
              .pull-right.buttons-container
                button(
                ng-repeat='btn in button.subButtons'
                class='btn margin btn-{{ btn.type }}'
                ng-click='vm.subButtonClick(btn)'
                ) {{ btn.title }}
