h3 Добавить точку

hr

section.row-fluid(cg-busy='{promise: vm.busy, message: vm.busyMessage}')
  form.form-horizontal(name="addOutletForm")

    .form-group
      label.col-sm-4.control-label(for="inputName") Название партнёра
      .col-sm-8
        .container-fluid
          .row
            .col-xs-10
              ui-select#inputName(
              ng-model='vm.selectedPartner'
              on-remove="vm.selectPartner()"
              on-select="vm.selectPartner($item)"
              ng-required
              )
                ui-select-match(
                placeholder="Название партнёра"
                allow-clear
                ) {{ $select.selected.shortName }}
                ui-select-choices(
                repeat='partner in vm.partners | filter: $select.search | orderBy:"shortName" track by partner.id'
                refresh='vm.getPartners($select.search, {sortBy: "shortName"})'
                refresh-delay=0
                )
                  div(ng-bind-html="partner.name | highlight: $select.search")
            .col-xs-2
              button.btn.ml-em.btn-primary.pull-right(
              ng-click=''
              ng-hide='!vm.currentSearchValue'
              )
                i.glyphicon.glyphicon-plus

    .form-group(ng-hide='!vm.selectedPartner')
      label.col-sm-4.control-label(for="inputAddress") Адрес
      .col-sm-8
        input#inputAddress.form-control(
        type="text"
        name="address"
        ng-required='true'
        placeholder="{{ vm.selectedPartner ? 'Адрес' : 'Сначала выберите партнёра' }}"
        ng-model="vm.address"
        ng-focus='vm.inputFocus()'
        ng-blur='vm.inputBlur()'
        autocomplete="off"
        )
    hr

    .form-group
      .col-sm-4.col-sm-offset-8
        uib-accordion(close-others='true')

          uib-accordion-group(
          ng-hide="(button.type === 'primary') && addOutletForm.$invalid"
          ng-repeat='button in vm.buttons'
          class='panel-{{ button.type }}'
          is-disabled="(button.type === 'primary') && addOutletForm.$invalid"
          ng-click='vm.accButtonClick(addOutletForm, button)'
          is-open='button.isOpen'
          )
            uib-accordion-heading
              div(ng-click='toggleOpen()')
                span {{ button.title }}
                i.pull-right.glyphicon(
                ng-hide="(button.type === 'primary') && addOutletForm.$invalid"
                ng-class="button.isOpen && 'glyphicon-chevron-up' || vm.selectedPartner && 'glyphicon-chevron-down' || 'glyphicon-chevron-left'"
                )
            p {{ button.description }}
              .pull-right.buttons-container
                button(
                ng-repeat='btn in button.subButtons'
                class='btn margin btn-{{ btn.type }}'
                ng-click='vm.subButtonClick(btn)'
                ) {{ btn.title }}
