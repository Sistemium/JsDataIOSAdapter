.alert.alert-default
  .row
    .col-xs-6.col-sm-6
      p.sale-order-info ТП:
        =' '
        strong.hidden-xs {{vm.saleOrder.salesman.shortName}}
        strong.visible-xs-inline {{vm.saleOrder.salesman.tinyName}}
      p.sale-order-info Заказ на:
        =' '
        strong {{vm.saleOrder.date}}
      p.sale-order-info(ng-if='!vm.newOrder&& vm.saleOrder.commentText') Комментарий:
        =' '
        strong {{vm.saleOrder.commentText}}

    .col-xs-6.col-sm-6(style='text-align: right')

      div(ng-if='vm.saleOrder.positions.length')
        a(
        href
        stm-click='saleOrderTotals'
        ng-class='{"disable-click" : vm.newOrder }'
        )

          strong {{ vm.saleOrder.positions.length | number:0 }}
          span {{ vm.saleOrder.positionsCountRu() }}

          span на сумму
          strong {{ vm.saleOrder.totalCost | number:2 }}
          span ₽

      p.sale-order-info(ng-if='!vm.saleOrder.positions.length') Товаров не добавлено

      div
        a(
        href
        uib-popover-template="'app/domain/sales/views/catalogue/outletPopover.html'"
        popover-title="Выберите клиента"
        type="button"
        popover-placement='bottom-right'
        popover-is-open='vm.isOpenOutletPopover'
        )  {{ vm.saleOrder.outlet.name || 'Выберите клиента' }}
  hr(style='border-color: #e0e0e0')
  .row
    .col-md-6.col-sm-6.col-xs-12.col-lg-6
      input#comment-input.form-control(
      type='text'
      ng-if='vm.newOrder'
      placeholder='Комментарий'
      aria-describedby='comment-input'
      ng-model='vm.saleOrder.commentText'
      ng-model-options='{debounce: 100}'
      )
    .col-md-6.col-sm-6.col-xs-12.col-lg-6.text-align-right
      button.btn.btn-success(type='button' ng-click='vm.saveOrder()') Сохранить
      button.btn.btn-danger(type='button' ng-click='vm.deleteOrder()') Удалить
