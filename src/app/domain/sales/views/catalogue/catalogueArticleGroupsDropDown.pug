span.pull-left(uib-dropdown)

  a(href uib-dropdown-toggle)
    span(ng-repeat='ancestor in vm.ancestors track by ancestor.id')
    span(ng-if='!vm.currentArticleGroup.name') {{ ancestor.name }}
    span {{ vm.currentArticleGroup.name || '(Выберите категорию)'}}
    span.caret

  ul(uib-dropdown-menu style='width: auto; max-height:300px; overflow:scroll')
    a.list-group-item(
    ng-class='{active: vm.currentArticleGroup.id === elem.id}'
    href
    ng-click='vm.articleGroupClick(elem)'
    ng-repeat='elem in vm.articleGroups | orderBy:"name" track by elem.id'
    )
      span.badge(ng-if='!elem.children.length && vm.articleGroupIds[elem.id].length')
        | {{vm.articleGroupIds[elem.id].length}}
      i.glyphicon.glyphicon-menu-right.pull-right(ng-if='elem.children.length')
      span {{elem.name}}
