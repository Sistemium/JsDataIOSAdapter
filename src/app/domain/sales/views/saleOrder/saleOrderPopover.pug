.scroll-y.sale-order-popover(
resize resize-offset-top='25'
)
  .option.new-item
    button.btn.btn-primary(
    ng-disabled='vm.saleOrder && !vm.saleOrder.id'
    stm-click='setSaleOrder'
    ng-click='vm.isSaleOrderPopoverOpen=false'
    )
      i.glyphicon.glyphicon-plus
      span Добавить новый Заказ

  .divider(ng-if='vm.items.length')

  .option(
  ng-repeat='draft in draftSaleOrders track by draft.id'
  ng-class='{active: vm.saleOrder.id === draft.id}'
  )
    a(
    href
    ng-click='vm.isSaleOrderPopoverOpen=false'
    stm-click='setSaleOrder' click-payload='draft'
    )
      .name
        .flex-1 {{ ::draft.outlet.name }}
        .right {{ draft.totalCost || 0 | number:2 }} ₽
      .address.gray
        small {{ ::draft.outlet.address }}
