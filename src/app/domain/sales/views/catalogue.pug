section(
cg-busy='vm.cgBusy'
ng-class='["catalogue", vm.currentState, {showOnlyOrdered: vm.showOnlyOrdered}]'
)

  .ui-view

  ol.breadcrumb(
  ng-hide='!vm.isWideScreen && vm.saleOrder'
  ng-include="'app/domain/sales/views/catalogue/catalogueBreadcrumb.html'"
  )

  section.animate-show(
  ng-show='!saleOrderExpanded'
  )

    #article-groups(ng-include="'app/domain/sales/views/catalogue/catalogueArticleGroups.html'")

    #scroll-articles.animate-show(
    ng-include="'app/domain/sales/views/catalogue/catalogueArticle.html'"
    ng-show='(vm.isWideScreen || !vm.isArticleGroupsExpanded)'
    )
