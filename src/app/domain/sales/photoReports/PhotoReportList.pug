section.ui-view.photo-report-list(cg-busy='vm.cgBusy')

  .row.filters

    .col-md-9.col-sm-8
    //sab-date-picker.col-sm-4.col-lg-3(
    //value='vm.date'
    //init-date='vm.initDate'
    //clear-text='Сегодня'
    //)

    .buttons.col-md-3.col-sm-4
      button.btn.btn-primary.btn-block(ng-click='vm.addItemClick()')
        i.glyphicon.glyphicon-plus
        span Добавить Фото-отчет

  #scroll-main.scroll-y(
  resize
  resize-offset-top='10'
  resize-property='max-height'
  ng-if='vm.data.length'
  )
    .photoReports(vs-repeat='100' vs-scroll-parent='#scroll-main')
      .photoReport(ng-repeat='item in vm.data track by item.id')
        .thumb
          img(ng-src='{{ item.srcThumbnail }}')
        .outlet {{ item.outletId }}
