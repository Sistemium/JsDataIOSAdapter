.workflow-popover

  .cancel-button(ng-if='vm.currentWorkflow')
    a.btn-link.btn.btn-block(href ng-click='vm.onWorkflowClick()') Отменить выбор

  .scroll-y.workflows(
  resize
  resize-offset-top='25'
  )
    .workflow(
    ng-repeat='workflow in vm.workflowDictionary track by workflow.processing'
    ng-click='vm.onWorkflowClick(workflow.processing)'
    ng-class='[{"current-workflow": workflow.processing === vm.currentWorkflow}, workflow.cls]'
    )
      a
        span {{ workflow.label || workflow.processing }}
        span {{ workflow.cnt }}
