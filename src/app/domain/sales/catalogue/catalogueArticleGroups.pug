catalogue-search-input(
search='vm.search'
filters='vm.filters'
search-enter-press='vm.searchEnterPress'
active-tags='vm.activeTags'
active-group='vm.activeGroup'
stock-length='vm.stock.length'
on-label-click='vm.showAdvancedFilter = !vm.showAdvancedFilter'
)

//.alert.alert-default.collapser
  a(
  href
  ng-click='vm.isArticleGroupsExpanded = !vm.isArticleGroupsExpanded'
  )
    span {{ vm.currentArticleGroup.displayName || vm.showOnlyOrdered && 'Товары заказа' || '  Все товары' }}
    span.caret(ng-class='{"flip-vertical": vm.isArticleGroupsExpanded}')

font-size-edit.scroll-y(append-to='articleGroups' resize resize-offset-top='5')

  catalogue-filter(
  sng-if='vm.showAdvancedFilter'
  search='vm.search'
  filters='vm.filters'
  active-tags='vm.activeTags'
  active-group='vm.activeGroup'
  catalogue-vm='vm'
  )
