section.campaigns(cg-busy='vm.cgBusy')

  .row.datepicker-with-buttons

    campaign-group-popover.col-sm-4.col-lg-3(
    current-item='vm.campaignGroup'
    init-item-id='vm.initGroupId'
    )

  .scroll-y(resize resize-offset-top='5')

    .campaign(ng-repeat='campaign in vm.campaigns | orderBy:"name" track by campaign.id')

      .name {{ campaign.name }}

      .pictures
        a.thumb(
        href ng-click='vm.thumbClick(picture)'
        ng-repeat='picture in ::campaign.campaignPictures track by picture.id'
        )
          img(ng-src='{{picture.srcThumbnail}}')
