.campaign-view

  .title
    .text {{ ::vm.campaign.name }}
    .buttons
      button.btn.pictures(
        ng-click="vm.togglePicturesClick()"
        class="{{ vm.showPictures ? 'btn-primary' : 'btn-default' }}"
      )
        i.glyphicon.glyphicon-picture

  .comment(ng-if="::vm.campaign.commentText" ng-bind-html="::vm.campaign.commentText")

  .fields
    .oneTime(ng-if="::vm.campaign.oneTime")
      i.glyphicon.glyphicon-ok
      span Единовременная
    .repeatable(ng-if="::vm.campaign.repeatable")
      i.glyphicon.glyphicon-ok
      span Многократная
    .need-photo(ng-if="::vm.campaign.needPhoto")
      i.glyphicon.glyphicon-camera
      span Фото-отчет
    .territory(ng-if="::vm.campaign.territory")
      i.glyphicon.glyphicon-map-marker
      span {{ ::vm.campaign.territory }}
    .period(ng-if="::vm.showPeriod")
      i.glyphicon.glyphicon-calendar
      span с {{ ::vm.campaign.dateB | amDateFormat:'DD.MM.YYYY' }} по {{ ::vm.campaign.dateE | amDateFormat:'DD.MM.YYYY' }}

  action-view(
    ng-repeat="action in vm.campaign.actions"
    action="::action"
    show-pictures="vm.showPictures"
  )

  .campaign-picture(ng-repeat="picture in vm.campaign.campaignPictures track by picture.id")
    img(ng-src="{{picture.srcFullscreen}}")
