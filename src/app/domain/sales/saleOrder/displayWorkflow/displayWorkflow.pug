.display-workflow

  a(
  ng-if='vm.workflow'
  href
  uib-popover-template="'app/domain/sales/saleOrder/displayWorkflow/displayWorkflowPopover.html'"
  popover-placement='bottom-left auto'
  popover-is-open='vm.popoverIsOpen'
  )
    span(ng-if='vm.currentWorkflow') Статус:
    span.name {{ vm.workflow[vm.currentWorkflow].label || 'Выберите статус' }}
    span.caret

